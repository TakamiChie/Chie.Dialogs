<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollview"
	android:layout_width="match_parent"
	android:layout_height="match_parent" >

	<LinearLayout
		android:id="@+id/LinearLayout1"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical" >

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="simpleAlertDialog"
			android:text="シンプルダイアログ" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="simpleAlertDialogID"
			android:text="シンプルダイアログ(ID指定)" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="normalAlertDialog"
			android:text="通常のアラートダイアログ" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="normalAlertDialogID"
			android:text="通常のアラートダイアログ(ID指定)" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="normalChoiceDialog"
			android:text="通常の多肢選択式ダイアログ" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="normalChoiceDialogID"
			android:text="通常の多肢選択式ダイアログ(ID指定)" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="normalInputDialog"
			android:text="通常の入力式ダイアログ" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="normalInputDialogID"
			android:text="通常の入力式ダイアログ(ID指定)" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="normalCheckDialog"
			android:text="チェックボックス付きダイアログ" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="normalCheckDialogID"
			android:text="チェックボックス付きダイアログ(ID指定)" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="showCustomDialog"
			android:text="カスタムダイアログ" />

		<Button
			android:id="@+id/button"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="showCustomDialogID"
			android:text="カスタムダイアログ(ID指定)" />
	</LinearLayout>

</ScrollView>